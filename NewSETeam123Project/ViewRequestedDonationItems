    <!-- Your custom JavaScript -->
    <script>
        // Sample data representing requested donation items
        const requestedItems = [
            { id: 1, itemName: "Clothes", description: "New or gently used clothes for all ages", requester: "Local Shelter" },
            { id: 2, itemName: "Non-perishable Food", description: "Canned food, rice, pasta, etc.", requester: "Food Bank" },
            { id: 3, itemName: "School Supplies", description: "Notebooks, pencils, pens, backpacks", requester: "Local School" },
            // Add more requested items as needed
        ];

        // Function to display requested donation items
        function displayRequestedItems() {
            const requestedItemsContainer = document.getElementById("requestedItems");
            requestedItemsContainer.innerHTML = ''; // Clear previous content

            requestedItems.forEach(item => {
                const itemDiv = document.createElement("div");
                itemDiv.classList.add("mt-4"); // Add margin top
                itemDiv.innerHTML = `
                    <h2>Item: ${item.itemName}</h2>
                    <p><strong>Description:</strong> ${item.description}</p>
                    <p><strong>Requested by:</strong> ${item.requester}</p>
                    <hr>
                `;
                requestedItemsContainer.appendChild(itemDiv);
            });
        }

        // Display requested donation items on page load
        displayRequestedItems();
    </script>
